<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VaccineData.CovaxinData"
    android:layout_marginBottom="60dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_2"
                tools:ignore="ImageContrastCheck"
                android:requiresFadingEdge="vertical"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textStyle="bold"
                android:text="@string/covaxin"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/info_covaxin"
                android:gravity="left"
                android:lineSpacingExtra="14.5dp"
                android:padding="24sp"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Stats:"
                android:textStyle="bold"
                android:gravity="left"
                android:lineSpacingExtra="14.5dp"
                android:padding="24sp"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_8"
                tools:ignore="ImageContrastCheck"
                android:requiresFadingEdge="vertical"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Common side effects"
                android:textStyle="bold"
                android:gravity="left"
                android:lineSpacingExtra="14.5dp"
                android:padding="24sp"
                />




            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showSeekBar="true"
                app:showYouTubeButton="false"
                app:showVideoCurrentTime="true"
                app:showVideoDuration="true"
                app:autoPlay="false"
                app:showFullScreenButton="true"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/side_effects_covaxin"
                android:gravity="left"
                android:lineSpacingExtra="14.5dp"
                android:padding="24sp"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Drug should be taken to minimize the adverse effects of this vaccine:"
                android:textStyle="bold"
                android:gravity="left"
                android:lineSpacingExtra="14.5dp"
                android:padding="24sp"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/adverse_effect"
                android:gravity="left"
                android:lineSpacingExtra="14.5dp"
                android:padding="24sp"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/light_blue_A400"
                android:text="Covaxin Fact Sheet"
                android:gravity="left"
                android:lineSpacingExtra="14.5dp"
                android:padding="24sp"
                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/light_blue_A400"
                android:text="Sources"
                android:gravity="left"
                android:lineSpacingExtra="14.5dp"
                android:padding="24sp"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>