<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.app1.vaccines.VaccinesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_vaccines" >
        <action
            android:id="@+id/action_navigation_home_to_covaxinData"
            app:destination="@id/covaxinData" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.app1.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/covaxinData"
        android:name="com.example.app1.VaccineData.CovaxinData"
        android:label="Covaxin"
        tools:layout="@layout/fragment_covaxin_data" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.app1.Menuelements.AboutFragment"
        android:label="About App"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/fragmentAboutme"
        android:name="com.example.app1.FragmentAboutme"
        android:label="About us"
        tools:layout="@layout/fragment_aboutme" />
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.example.app1.Menuelements.RulesFragment"
        android:label="Contant Us"
        tools:layout="@layout/fragment_rules" />

</navigation>