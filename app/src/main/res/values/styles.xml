<resources>

    <style name="Widget.Theme.App1.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.App1.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="beautiful_text">
        <item name="android:fontFamily">@font/acme</item>
    </style>

    <style name="defaulttextstyle">
        <item name="android:layout_marginStart">@dimen/question_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/question_horizontal_margin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#060606</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="optionsstyle" parent="defaulttextstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">@dimen/question_vertical_margin</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
    </style>

    <style name="playbuttonstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NameStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BioText" parent="NameStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
    </style>
</resources>